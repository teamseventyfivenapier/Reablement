<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReablementApp.Views.GoalsOverviewPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:ReablementApp.Helpers"
    xmlns:viewmodels="clr-namespace:ReablementApp.ViewModels"
    xmlns:model="clr-namespace:ReablementApp.Models"
    x:DataType="viewmodels:GoalsOverviewViewModel"
    BackgroundColor="{StaticResource Background}"
    x:Name="GoalsPage">

    <ContentPage.BindingContext>
        <viewmodels:GoalsOverviewViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Frame BackgroundColor="{StaticResource Primary}">
                <StackLayout>
                    <Label
                        Text="Goals"
                        TextColor="{StaticResource TextPrimary}"
                        FontSize="Large"
                        HorizontalOptions="CenterAndExpand"/>
                    <Image>
                        <Image.Source>
                            <FontImageSource
                                FontFamily="FASolid" 
                                Glyph="{x:Static helpers:FAIcons.User}"
                                Size="50"
                                Color="LightYellow"/>
                        </Image.Source>
                    </Image>
                    <Label
                        Text="User"
                        TextColor="{StaticResource TextPrimary}"
                        FontSize="Large"
                        HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
            </Frame>
            
            <Button
                Grid.Row="1"
                x:Name="btnAddGoal"
                BackgroundColor="{StaticResource Primary}"
                BorderColor="Black"
                BorderWidth="0.3"
                Clicked="btnAddGoal_Clicked"
                HorizontalOptions="End"               
                VerticalOptions="CenterAndExpand"
                Text="Add Goal"
                TextColor="{StaticResource TextPrimary}"/>
            <Label 
                Grid.Row="1"
                HorizontalOptions="CenterAndExpand"
                Text="Current Goals"
                FontSize="Large"
                TextColor="{StaticResource TextPrimary}"/>

            <ListView
                Grid.Row="2"
                CachingStrategy="RecycleElement"
                BackgroundColor="Transparent"            
                IsGroupingEnabled="True" 
                HasUnevenRows="True" 
                IsPullToRefreshEnabled="True"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                RefreshCommand="{Binding RefreshCommand}"
                SeparatorVisibility="None">
                <!--ItemsSource="{Binding }"-->
                <!--SelectedItem="{Binding SelectedGoal, Mode=TwoWay}"-->

                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>test</x:String>
                    </x:Array>
                </ListView.ItemsSource>

                <ListView.ItemTemplate>
                    <!--x:DataType="model:Goal"-->
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Delete" IsDestructive="True"/>
                            </ViewCell.ContextActions>
                            <Grid Padding="10">
                                <Frame CornerRadius="10" HasShadow="True">
                                    <StackLayout Orientation="Horizontal">
                                        <StackLayout VerticalOptions="Center">
                                            <Label VerticalOptions="Center" FontSize="Large" Text="Current Goal"/>
                                            <ProgressBar 
                                                Progress="0.5"
                                                ProgressColor="Green"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>